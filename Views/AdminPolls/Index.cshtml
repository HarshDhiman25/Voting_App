@model IEnumerable<Voting_Test.Models.Poll>

@{
    ViewData["Title"] = "Polls List";
}

<h1>Polls List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Question</th>
            <th>Created Date</th>
            <th>End Date</th>   
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="poll-@item.PollId">
                <td>@item.Question</td>
                <td>@item.CreatedDate</td>
                <td>@item.EndDate</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PollId" class="btn btn-warning btn-sm">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@item.PollId" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
