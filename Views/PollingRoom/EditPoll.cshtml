@model Voting_Test.Models.Poll

@{
    ViewData["Title"] = "Edit Poll";
}

<h1>@ViewData["Title"]</h1>

<h4>Poll</h4>
<hr />
<form asp-action="EditPoll" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Question" class="control-label"></label>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="PollId" />
        <input type="hidden" name="PollingRoomId" value="@ViewData["PollingRoomId"]" />
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Polls" asp-route-id="@ViewData["PollingRoomId"]" class="btn btn-secondary">Back to Polls</a>
    </div>
</form>

