@model IEnumerable<Voting_Test.Models.PollingRoom>

@{
    ViewData["Title"] = "Home";
}

<h1>Polling Rooms</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created Date</th>
            <th>Is Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CreatedDate</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="PollsByRoom" asp-route-id="@item.PollingRoomId" class="btn btn-info btn-sm">View Polls</a>
                </td>
            </tr>
        }
    </tbody>
</table>
